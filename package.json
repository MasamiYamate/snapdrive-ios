{
  "name": "snapdrive-ios",
  "version": "0.1.0",
  "description": "Snapshot testing tool for iOS. AI Agent-powered iOS Simulator automation for visual regression testing.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "snapdrive-ios-mcp": "dist/index.js",
    "snapdrive-ios": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MasamiYamate/snapdrive-ios.git"
  },
  "homepage": "https://github.com/MasamiYamate/snapdrive-ios#readme",
  "bugs": {
    "url": "https://github.com/MasamiYamate/snapdrive-ios/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "ios",
    "simulator",
    "snapshot-testing",
    "visual-regression",
    "automation",
    "idb",
    "claude",
    "ai-agent"
  ],
  "author": "aikawa_japan <yamate.inquiry@mail.yamatte.net>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "sharp": "^0.33.0",
    "yaml": "^2.7.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "docs/images",
    "README.md"
  ]
}
